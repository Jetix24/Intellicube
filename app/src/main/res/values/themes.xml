<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Intellicube" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/rose_700</item>
        <item name="colorOnPrimary">@color/blue_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rose_500</item>
        <item name="colorSecondaryVariant">@color/rose_700</item>
        <item name="colorOnSecondary">@color/rose_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/blue_700</item>
    </style>

    <style name="Theme.Intellicube.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoUnderlineEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Otros atributos de estilo si los tienes -->

        <!-- Establece el color transparente para la lÃ­nea indicadora -->
        <item name="boxStrokeColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Intellicube.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Intellicube.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>